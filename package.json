{
  "name": "express-zod-openapi",
  "version": "0.1.0",
  "description": "Express extension for Zod-based request/response validation with automatic OpenAPI spec generation.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "dev": "tsup src/index.ts --dts --format cjs,esm --watch",
    "lint": "eslint src --ext .ts",
    "example": "cd example && npm start",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "express",
    "zod",
    "swagger",
    "openapi",
    "typescript",
    "validation",
    "node",
    "nodejs",
    "api"
  ],
  "author": "pvakharia007@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pvakharia9033/express-zod-openapi.git"
  },
  "bugs": {
    "url": "https://github.com/pvakharia9033/express-zod-openapi/issues"
  },
  "homepage": "https://github.com/pvakharia9033/express-zod-openapi#readme",
  "peerDependencies": {
    "express": "^4.18.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.0.0"
  }
}
